{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"rootDir": "src",
		"outDir": "dist",
		"moduleResolution": "node",
		"baseUrl": "./src",
		"paths": {
			"@/*": ["*"]
		},
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"types": ["node"]
	},
	"include": ["src/**/*.ts", "src/types/*.d.ts"],
	"exclude": ["node_modules"],
	"typeRoots": ["./node_modules/@types", "./src/types"]
}
